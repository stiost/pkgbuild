# Maintainer: Stian Ã˜sterhaug <stian.osterhaug@gmail.com>

pkgname=dotfiles
pkgver=0.6.0
pkgrel=3
pkgdesc="dotfiles is a tool to make managing your dotfile symlinks in \$HOME easy, allowing you to keep all your dotfiles in a single directory."
license=('ISC')
arch=(any)
depends=('python')
url=https://github.com/jbernard/dotfiles
source=(https://pypi.python.org/packages/source/d/dotfiles/dotfiles-0.6.0.tar.gz)
md5sums=('270d6043656efdac935d2a02225788f8')

build() {
    cd "$srcdir/dotfiles-$pkgver"
    python setup.py build
}

package() {
    cd "$srcdir/dotfiles-$pkgver"
    python setup.py install --root=$pkgdir
}

